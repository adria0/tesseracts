{{ > header.handlebars }}

<h6 class="title">
Non-empty-blocks
{{#if has_prev_page}}
<a href="/neb?p={{prev_page}}"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i></a>
{{else}}
<i class="fa fa-chevron-circle-left disabled" aria-hidden="true"></i>
{{/if}}
{{#if has_next_page}}
<a href="/neb?p={{next_page}}"><i class="fa fa-chevron-circle-right" aria-hidden="true"></i></a>
{{else}}
<i class="fa fa-chevron-circle-right disabled" aria-hidden="true"></i>
{{/if}}
</h6>
<table class="pure-table">
    <thead>
        <th>Block</th>
        <th>Author</th>
        <th>#txs</th>
        <th>Datetime</th>
        <th>Gas used</th>
        <th>Gas limit</th>
    </thead>
    <tbody>
        {{#each blocks}}
        <tr>
            <td class="text-truncate type-block"><a href={{block.link}}>{{block.text}}</td>
            <td class="text-truncate type-addr"><a href={{author.link}}>{{author.text}}</td>
            <td>{{tx_count}}</td>
            <td class="text-truncate type-timestamp">{{timestamp}}</td>
            <td class="text-truncate type-gas">{{gas_used}}</td>
            <td class="text-truncate type-gas">{{gas_limit}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>


<div class="footer">
Next block to index is #{{ last_indexed_block }}
</div>

{{ > footer.handlebars }}
